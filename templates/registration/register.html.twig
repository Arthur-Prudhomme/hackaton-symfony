{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-row w-screen h-screen">
        <form class="lg:w-1/2 w-full flex flex-col h-full justify-center mx-auto items-center">
            <div class="flex flex-col lg:w-1/2 w-8/12 h-1/3 justify-between gap-y-3">
                <h1 class="text-2xl font-bold">Create an account</h1>

                {{ form_start(registrationForm) }}
                <div class="bg-white rounded-md py-2 px-4 items-center flex flex-row justify-between">
                    <div class="flex flex-row items-center justify-between">
                        <ion-icon class="w-7 h-7 text-[#3979F6]" name="mail-outline"></ion-icon>
                        <button class="ml-4 text-sm bg-transparent focus:outline-0 placeholder-[#4D4F51] text-[#4D4F51">{{ form_row(registrationForm.email) }}</button>
                    </div>
                </div>
                    <div class="bg-white rounded-md py-2 px-4 items-center flex flex-row justify-between">
                        <div class="flex flex-row items-center justify-between">
                            <ion-icon class="w-7 h-7 text-[#3979F6]" name="lock-open-outline"></ion-icon>
                            <button class="ml-4 text-sm bg-transparent focus:outline-0 placeholder-[#4D4F51] text-[#4D4F51 input-field">{{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}</button>
                        </div>
                    </div>
                    <div class="bg-white rounded-md py-2 px-4 items-center flex flex-row justify-between">
                        <div class="flex flex-row items-center justify-between">
                            <ion-icon class="w-7 h-7 text-[#3979F6]" name="checkmark-circle-outline"></ion-icon>
                            <button class="ml-4 text-sm bg-transparent focus:outline-0 placeholder-[#4D4F51] text-[#4D4F51">{{ form_row(registrationForm.agreeTerms) }}</button>
                        </div>
                    </div>

                    <button type="submit" class="btn bg-[#3979F6] bg-opacity-50 w-full rounded-md py-2 px-4 text-white submit">Register</button>
                {{ form_end(registrationForm) }}
                    <p class="flex mx-auto">Already have an account ? <a class="text-[#3979F6]" href="/register">&nbsp; Sign in</a></p>
            </div>
        </form>

        <img src="/img/montagne.jpeg" alt="montagne" class="h-full w-3/6 object-cover">
    </div>

{% endblock %}
