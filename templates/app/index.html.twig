{% extends 'base.html.twig' %}


{% block body %}
    {% include 'partial/header.html.twig' %}

<div class="w-11/12 mx-auto mt-24 mb-10">
    <div class="flex tab:flex-col-reverse">
        <div class="tab:px-8 tab:w-full w-1/3 h-full flex-col justify-between gap-8">
            <h1 class="font-bold text-2xl py-2">Welcome to our great skiable domain</h1>
            <h3 class="font-bold tab:p-0 py-2">6 ski resorts</h3>
            <h3 class="font-bold tab:p-0 py-2">6 historical villages</h3>
            <h3 class="font-bold tab:p-0 py-2">Low prices</h3>
            <h3 class="font-bold tab:p-0 py-2">192km of Alpin slopes</h3>

            <div class="ss:flex-wrap flex py-3 justify-between">
                <img class="w-[70px] h-auto" src="img/logo-praz.png" alt="praz">
                <img class="w-[70px] h-auto" src="img/logo-flumet.png" alt="flumet">
                <img class="w-[70px] h-auto" src="img/logo-hauteluce.png" alt="hauteluce">
                <img class="w-[70px] h-auto" src="img/logo-crestvoland.png" alt="crestvoland">
                <img class="w-[70px] h-auto" src="img/logo-bellecombe.png" alt="bellecombe">
                <img class="w-[70px] h-auto" src="img/logo-saisies.png" alt="bellecombe">

            </div>
            <a class="bg-white text-md my-2 py-1 px-3 flex items-center text-[#939393] rounded hover:bg-[#3979F6] hover:text-white uppercase" href="#">Ski pass prices</a>

            <a class="bg-white text-md py-1 px-3 flex items-center text-[#939393] rounded hover:bg-[#3979F6] hover:text-white uppercase" href="#">Accommodation good deals</a>
        </div>
        <div class="tab:w-full w-2/3 px-8">
            <img class="w-full h-auto rounded-lg" src="/img/shooting-pistes.jpg" alt="banniere">
        </div>
    </div>


    <h2 class="tab:pt-6 font-bold mb-3 sm:text-2xl lg:text-base">The Stations of Espace Diamant :</h2>
    <div class="flex mt-6 snap-x snap-mandatory overflow-y-hidden">
        <div class=" snap-start shrink-0 flex flex-row">

            {% for station in stations %}
                <div class="mr-8 flex flex-col rounded-lg w-[50vw] lg:w-[15vw] lg:h-[40vh] h-[40vh] relative items-center justify-end ">
                    <div class="  flex flex-col rounded-lg tab:w-[40vw] tab:h-[40vw] w-[50vw] lg:w-[15vw] lg:h-[40vh] h-[40vh] relative items-center justify-end ">
                        <div class="z-[2] flex flex-col backdrop-blur rounded-lg mb-4 w-10/12 text-[#4D4F51] p-2">

                            <a href="{{ path('station_index', {'id': station.id}) }}"
                               class="sm:hidden ss:hidden lg:block  capitalize">See Station</a>
                            <a href="{{ path('station_index', {'id': station.id}) }}"
                               class="sm:block lg:hidden capitalize">{{ station.StationName }}</a>
                        </div>

                        <img class="object-cover rounded-lg absolute h-full z-[1]" src="https://images.coinsecret.com/images/cs/cs2diapos/ski/50717273.jpg" alt="montagne">

                    </div>
                    <div class="ss:hidden sm:hidden lg:flex lg:w-[15vw] tab:w-[35vw] w-[50vw] justify-between items-center mt-4">
                        <h3 class=" font-semibold sm:text-2xl ss:text-base lg:text-sm">{{ station.StationName }}</h3>
                        <ion-icon class="ss:text-base sm:text-2xl" name="arrow-forward-outline"></ion-icon>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

    {% if favorite_stations %}
    <div class="flex flex-col mt-12 mb-20">
        <h2 class="text-base font-semibold mb-6">Favorite stations</h2>
        {% for station in favorite_stations %}
            <div class="flex-col justify-items-center">
                <div class="  flex flex-col rounded-lg tab:w-[40vw] tab:h-[40vw] w-[50vw] lg:w-[15vw] lg:h-[40vh] h-[40vh] relative items-center justify-end ">
                    <div class="z-[2] flex flex-col backdrop-blur rounded-lg mb-4 w-10/12 text-[#4D4F51] p-2">

                        <a href="{{ path('station_index', {'id': station.station.id}) }}"
                           class="sm:hidden ss:hidden lg:block  capitalize">See Station</a>
                        <a href="{{ path('station_index', {'id': station.station.id}) }}"
                           class="sm:block lg:hidden capitalize">{{ station.station }}</a>
                    </div>
                    <img class="object-cover rounded-lg absolute h-full z-[1]"
                         src="https://images.coinsecret.com/images/cs/cs2diapos/ski/50717273.jpg" alt="montagne">

                </div>
                <div class="ss:hidden sm:hidden lg:flex lg:w-[15vw] tab:w-[35vw] w-[50vw] justify-between items-center mt-4">
                    <h3 class=" font-semibold sm:text-2xl ss:text-base lg:text-sm">{{ station.station }}</h3>
                    <ion-icon class="ss:text-base sm:text-2xl" name="arrow-forward-outline"></ion-icon>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
</div>

{% endblock %}
